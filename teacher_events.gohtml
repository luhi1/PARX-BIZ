<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@1.*/css/pico.min.css">
  <title>ParX Login</title>
</head>
<body>
<nav class="container-fluid" style="background: #141e26;">
  <ul>
    <img src="https://pluspng.com/img-png/logo-template-png-logo-templates-1655.png" alt="icon"
         style="height: 40%; width: 5%">
  </ul>
  <ul>
    <a href="/teacher_prizes">
      <li>Prizes</li>
    </a>

    <a href="./winners">
      <li>Winners</li>
      </a>

      <a href = "./teacher_events">
        <li>Events</li>
      </a>

      <a href = "./teacher_create_event">
        <li>Create Event</li>
      </a>

    <li>Quarter Report</li>
    <a href="./logout">
      <li>Logout</li>
    </a>
  </ul>
</nav>

<main>
  <div class = "container">
  <!-- I DON'T KNOW IF WE NEED EVENT$INDEX FORMAT YET, SO WE KEEP IT -->
  {{range $index, $val := .}}
    <form method="POST" action="./TBD">
      <article id="event{{$index}}">
        <h2>Event Name</h2>
        <div class="grid">
          <div>
            <ul style = "list-style-type: none" class = "grid">
              <div>
                <label>
                  <li>Points</li>
                  <input type="number" id="Points" max="9999999" name="Points"
                         required="required" value="{{.Points}}">
                </label>
              </div>
              <div>
                <label>
                  <li>Event Description</li>
                  <input type="text" id="EventDescription" name="EventDescription"
                         required="required" value="{{.EventDescription}}">
                </label>
              </div>

              <div>
                <label>
                  <li>Date</li>
                  <input
                          type="date"
                          name="EventDate"
                          value="{{.EventDate}}"
                          id="EventDate"
                          required="required"/>
                  </li>
                </label>
              </div>
            </ul>

          <ul style = "list-style-type: none" class = "grid">
            <div>
              <label>
                <li>Room #</li>
                <input type="number" id="RoomNumber" max="9999999" name="RoomNumber" value="{{.RoomNumber}}">
              </label>
            </div>

            <div>
              <label>
                <li>Advisor(s) Name</li>
                <input type="text" id="AdvisorNames" name="AdvisorNames"
                       required="required" value="{{.AdvisorNames}}">
              </label>
            </div>
            <!--If you're a psycho, add google maps integration-->
            <div>
              <label>
                <li>Location</li>
                <input type="text" id="Location" name="Location"
                       required="required" value="{{.Location}}">
              </label>
            </div>
          </ul>

            <ul style = "list-style-type: none" class = "grid">
            <div>
              <label>
                <li>Location Description</li>
                <input type="text" id="LocationDescription" name="LocationDescription" value="{{.LocationDescription}}">
              </label>
            </div>

            <div>
              <label>
                <li>Sport</li>
                <input type="text" id="Sport" name="Sport" value="{{.Sport}}">
              </label>
            </div>

            <div>
              <label>
                <li>Sport Description</li>
                <input type="text" id="SportDescription" name="SportDescription" value="{{.SportDescription}}">
              </label>
            </div>

            </ul>

            <div>
              <h5>These are the student signed up:</h5>
              <ol>
                <strong>
                  <li style="display: inline">Name:</li>
                </strong>
                <u>
                  <li style="display: inline">{{.StudentName}}</li>
                </u>
                <strong>
                  <li style="display: inline"> Student Number:</li>
                </strong>
                <u>
                  <li style="display: inline">{{.StudentNumber}}</li>
                </u>
                <strong>
                  <li style="display: inline"> Attended?</li>
                </strong>

                <label style="display: inline" for="StudentAttended">
                  <input id="StudentAttended" value="true" name="StudentAttended" type="checkbox"
                         checked="{{.StudentAttended}}">
                </label>

              </ol>
            </div>
            <ol>
              <button class="contrast" value="remove" type="submit">Remove Event</button>
              <button class="secondary" value="save" type="submit">Save</button>
            </ol>

          </div>

          <div>
            <img id="EventImage" src="{{.EventImage}}" alt="Event Image" style="height: 50%; width: 100%">
            <input id="file-upload" name="EventImage" type="file" accept="image/png, image/jpeg" onchange='
            const previewImage = document.getElementById("EventImage")

            const file = this.files[0]
            console.log(file)
            if (file){
              const reader = new FileReader()
              reader.addEventListener("load", function(){
                previewImage.setAttribute("src", this.result)
              })

              reader.readAsDataURL(file)
            }
            inpFile.setAttribute("value", file)
          '
            >
          </div>
        </div>
      </article>
    </form>
  {{end}}
  </div>
  </main>

</body>
</html>
